algoritmo "Fuções de entrada e saída 2.0"
var
num1, num2, soma: inteiro
inicio

      num2 <- 2
      escreval("Evitando a maldição do 'Olá, mundo'")
      escreva("Digite um inteiro: ")
      leia(num1)
      soma <- num1 + num2
      escreval("Temos que a soma de", num1, " e", num2, " é igual a", soma)

fimalgoritmo